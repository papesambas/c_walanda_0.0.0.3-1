{% extends 'base.html.twig' %}

{% block title %}{{ title|default('Créer / Modifier un Cercle') }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h1 class="h4 mb-0">{{ title|default('Créer / Modifier une Commune') }}</h1>
        </div>

        <div class="card-body">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="mb-3">
                {{ form_label(form.region, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.region, {'attr': {'class': 'form-select form-control tomselect-region'}}) }}
                {{ form_errors(form.region) }}
            </div>

                        <div class="mb-3">
                {{ form_label(form.cercle, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.cercle, {'attr': {'class': 'form-select form-control tomselect-cercle'}}) }}
                {{ form_errors(form.cercle) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.designation, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.designation, {
                    'attr': {
                        'class': 'form-control w-full px-4 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500 tomselect-commune',
                        'placeholder': 'Ex: Commune de Bamako'
                    }
                }) }}
                {{ form_errors(form.designation) }}
            </div>

            <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                <a href="{{ path('app_cercles_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> {{ button_label|default('Enregistrer') }}
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
