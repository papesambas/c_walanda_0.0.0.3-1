            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    {{ form_label(form.document, "Documents (PDF/Word)", {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.document, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-text">
